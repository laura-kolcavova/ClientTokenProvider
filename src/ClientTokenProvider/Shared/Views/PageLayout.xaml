<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="ClientTokenProvider.Shared.Views.PageLayout"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:sharedViews="clr-namespace:ClientTokenProvider.Shared.Views">
    <ContentView.Resources>
        <ControlTemplate x:Key="PageLayoutTemplate">
            <Grid ColumnDefinitions="auto, *">
                <sharedViews:ConfigurationListView Grid.Column="0" />

                <Grid Grid.Column="1">
                    <ContentPresenter />
                </Grid>
            </Grid>
        </ControlTemplate>
    </ContentView.Resources>
</ContentView>